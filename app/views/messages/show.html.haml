%p#notice= notice
.column.span-10
  %p
    %b=t('messages.index.from')
    = @message.user.profile.name
  %p
    %b=Message.human_attribute_name(:title)

    = @message.title
  .box
    %b= Message.human_attribute_name(:body)

    = @message.body
.column
  %ul
    - unless @message.user_id == current_user.id
      %li= link_to t(:reply), new_message_path(:to_user_id =>@message.user.id, :title=> 'RE> '+@message.title)
      %li= link_to t(:destroy), @message, :confirm => 'Are you sure?', :method => :delete
    %li= link_to t(:back), messages_path
