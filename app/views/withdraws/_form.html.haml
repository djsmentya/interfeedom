= form_for @withdraw do |f|
  -if @withdraw.errors.any?
    #error_explanation
      %h2= "#{pluralize(@withdraw.errors.count, "error")} prohibited this withdraw from being saved:"
      %ul
        - @withdraw.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :payment_type
    = f.select :payment_type, %w(PayPal WebMoney)
  .actions
    = f.submit 'Save'
