%h1 Order
.column.span-10.border
  =form_for @order do |f|
    - profile = current_user.profile
    -if @order.errors.any?
      #error_explanation
        %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
        %ul
          - @product.errors.full_messages.each do |msg|
            %li= msg

    .row
      =f.label :recipient
    =f.text_field :recipient, :value => profile.full_name
    .row
      =f.label :phone
    = f.phone_field :phone, :value => profile.phone
    .row
      =f.label :email
    =f.text_field :email, :value => current_user.email
    .row
      =f.label :comment
    = f.text_area :comment, :rows =>"3"
    .row
      = f.submit
.column.span-8.last
  - @products.each do |product|
    .row
      %hr
      .column.span-2
        = link_to image_tag(product.image.url(:thumb)), categoried_product_path(product)
      .column.spna-4
        = product.name
      - quantity = current_cart.item_quantity(product.id)
      .column.span-2.right
        %label
          Quantity:
        = quantity
        %label
          Price:
        = product.price
        = link_to 'Destroy',cart_path(product), :method => :delete
