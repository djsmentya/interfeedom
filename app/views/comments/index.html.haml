%h1 Listing comments

#comment
  %hr
  - comments.each do |comment|
    %label
      Author
    %br
    = comment.title
    %br
    %label
      Content
    %br
    = comment.comment
    %br
 
= form_for [ Comment.new]  do |f|
    
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :comment
    %br
    = f.text_area :comment, :rows=> 5
    = hidden_field_tag :pr_id, params[:id]
  .actions
    = f.submit 'Save'
