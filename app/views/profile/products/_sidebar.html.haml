.span-5.last
  .span-5.last.sbar_head_left
    #ffe.right
      =image_tag 'site/title_header_right.png'
    #title
      = t('.nav_title')
  .span-5.last
    .sbar_content
      = form_tag profile_products_path, :method => :get do
        .column
          %label From
        .column.right
          %label To
        .span-5
          = datepicker_input :updated_at, :from, :size => 5
          = '-' 
          = datepicker_input :updated_at, :to, :size => 5
        %hr
        %p{:style=>'text-align:center;'}
          = link_to_function 'Submit', "$('form').submit()", :class=> :button
        %p{:style=>'text-align:center;'}
          = link_to 'Reset', profile_products_path, :class=> :button

