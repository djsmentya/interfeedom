%table
  %thead
    %th= t('.product')
    %th= t('.description')
    %th= t('.available_on')
    %th= t('.quantity')
    %th= t(:price)
    %th= t('.action')
  - @products.each do |product|
    %tbody
      %td= link_to image_tag(product.image.url(:thumb)), '#'
      %td= product.name
      %td
        -if product.available?
          yes
        -else
          no
      %td= product.count_on_hand
      %td= product.price
      %td
        = link_to 'Destroy','#', :method => :delete
        = link_to 'Edit', edit_profile_product_path(product)

