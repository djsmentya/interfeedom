%table
  %thead
    %th= t('.product')
    %th= t('.description')
    %th= t('.available_on')
    %th= t('.quantity')
    %th= t(:price)
    %th= t('.action')
  - @products.each do |product|
    %tbody
      %td= link_to image_tag(product.image.url(:thumb)), '#'
      %td= product.name
      %td
        -if product.available?
          yes
        -else
          no
      %td= product.count_on_hand
      %td= product.price
      %td
        = link_to 'Destroy','#', :method => :delete
        = link_to 'Edit', edit_profile_product_path(product)

= content_for :profile_nav do
  #sidebar_nav
    .wg_title.span-18{:style=> 'margin-bottom:5px;'}
      #wg_left_corner
      #wg_right_corner 
      %ul.left
        %li
          = link_to image_tag( 'site/webicons/screen-add.gif', :class=> :menu_nav_img), new_profile_product_path
          = link_to t('.new_product'), new_profile_product_path
      .title
        Products
:css
