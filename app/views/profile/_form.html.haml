- path = nil
- if controller.action_name.eql? 'new'
  -  path = {:controller =>:profile, :action => :index }
-else
  - path =  {:controller =>:profile, :action => :update }
= form_for @profile, :url => path do |f|
  -if @profile.errors.any?
    #error_explanation
      %h2= "#{pluralize(@profile.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @profile.errors.full_messages.each do |msg|
          %li= msg
  .row
    .field
      = f.label :first_name
    = f.text_field :first_name
  .row
    .field
      = f.label :last_name
    = f.text_field :last_name
  .row
    .field
      = f.label :phone
    = f.phone_field :phone
  .actions
    = f.submit t(:submit)
