%h1 Profile
- if @profile = current_user.profile
  .span-18
    .span-5
      .row
        %label
          Your name:
        = @profile.person
      .row
        %label
          Your Email:
        = current_user.email
      .row
        %label
          Your phone:
        = @profile.phone
      .row
      -if @profile.shipping_address.present?
        %label
          Shipping Address:
        = @profile.shipping_address.full_address
  = link_to 'Edit Profile', edit_profile_path(@profile)
- else
  .row
    %h5
      No information
= link_to 'Edit Profile', new_profile_path