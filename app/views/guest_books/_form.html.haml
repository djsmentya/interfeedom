= form_for @guest_book do |f|
  -if @guest_book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@guest_book.errors.count, "error")} prohibited this guest_book from being saved:"
      %ul
        - @guest_book.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :text
    = f.text_area :text, :rows => 5, :cols=>45
  .actions
    = f.submit t(:submit)
