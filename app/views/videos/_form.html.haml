= form_for @video do |f|
  -if @video.errors.any?
    #error_explanation
      %h2= "#{pluralize(@video.errors.count, "error")} prohibited this video from being saved:"
      %ul
        - @video.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :genre
    = f.text_field :genre
  .field
    = f.label :producers
    = f.text_field :producers
  .field
    = f.label :completion_year
    = f.date_select :completion_year
  .actions
    = f.submit 'Save'
