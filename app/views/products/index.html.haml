- @products.each do |product|
  .product.column
    .span-4
      = link_to image_tag(product.image.url(:thumb)), product_path(product)
    .span-13
      .span-9
        #states.span-9
          -if product.created_at >= 2.weeks.ago
            .state
              %b NEW
          -if product.available?
            .state
              %b AVAILABLE
          - else
            .state
              %b  NOT AVAILABLE
        .span-9.prepend-top
          %h4
            = link_to product.name, product_path(product)
        .span-9.last
          = product.description
      .span-3  dfa


