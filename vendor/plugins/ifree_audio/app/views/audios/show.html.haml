.span-7
  %span{:style => 'text-align:center;'}
    =image_tag( @audio.image.url(:large))
    .column.span-7
      .column
        %label
          =t :rating
      .column
        -#{:style=> 'width:125px;'}
        =ratings_for(@audio, :dimension => :speed)
  .span-6
    %hr
    %h5
      Short info
    %label
      Style:
    =@audio.style
    %br
    %label
      Group:
    =@audio.group
    %br
    %label
      Album:
    =@audio.album

%h1= @audio.name
.span-11.last
  = product_states(@audio)
  .right
    %label
      = t('videos.index.price')
    = @audio.price
    %span.prepend-1
      =link_to_add_product(@audio, :class =>'button')
  .span-10.prepend-top
    %br
    %h4
      Play List:
      %br
    = @audio.description
  = render :template => 'comments/index', :locals=>{:comments => @audio.comments}   
