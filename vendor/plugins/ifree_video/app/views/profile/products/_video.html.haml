#prod
  = fields_for :product, product do |f|
    %table
      %colgroup
        %col{:width => '35%'}
        %col{:width => '65%'}
      %thead
        %th{:colspan => 2} Product
      %tbody
        %tr
          %td
            = f.label :name 
            .right
              =image_tag "flags/en.png"
          %td= f.text_field :name_en 
        %tr
          %td
            = f.label :name 
            .right
              =image_tag "flags/ua.png"
          %td= f.text_field :name_ua
        %tr
          %td
            = f.label :description
            .right
              =image_tag "flags/en.png"
          %td= f.text_area :description_en, :rows=> 3
        %tr
          %td
            = f.label :description
            .right
              =image_tag "flags/ua.png"
          %td= f.text_area :description_ua, :rows=> 3
        %tr
          %td= f. label :available_on
          %td= f.datepicker :available_on
        %tr
          %td= f.label :count_on_hand
          %td= f.text_field :count_on_hand
        %tr
          %td= f.label :price
          %td= f.text_field :price
        %tr
          %td= f.label :image
          %td= f.file_field :image
        %tr
          %td= f.label :genre_id
          %td= f.text_field :genre_id
        %tr
          %td= f.label :producer
          %td= f.text_field :producer
    = f.submit      
