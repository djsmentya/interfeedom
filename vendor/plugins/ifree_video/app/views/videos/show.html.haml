.span-7{:style => 'text-align:center;'}
  =image_tag @video.image.url(:large)
%h1= @video.name
.span-11.last
  = product_states(@video)
  .right
    %label
      = t('videos.index.price')
    = @video.price
    %span.prepend-1
      =link_to_add_product(@video, :class =>'button')
  .span-10.prepend-top
    %label
      Genre:
    = @video.genre.name
    %br
    %label
      Producer:
    = @video.producer
    %br
    %label
      Description:
    = @video.description
